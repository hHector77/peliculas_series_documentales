<h1 class="mb-4">Documentales</h1>

<% @documentary_films.each do |documentary| %>
  <div class="card mb-3">
    <div class="card-body">
      <h2 class="card-title"><%= documentary.name %></h2>
      <p class="card-text"><%= documentary.synopsis %></p>
      <p class="card-text"><small class="text-muted">Director: <%= documentary.director %></small></p>
    </div>
  </div>
<% end %>

